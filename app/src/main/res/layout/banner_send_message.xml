<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_banner_application"
    android:paddingLeft="16sp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/banner_img_back"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:src="@drawable/back_button_send_message"
        app:layout_constraintBottom_toBottomOf="@id/banner_send_message_txt_state"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/banner_send_message_txt_name_user" />

    <TextView
        android:id="@+id/banner_send_message_txt_name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Janet Fowler"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/banner_send_message_txt_state"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/banner_send_message_txt_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Online now"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_send_message_txt_name_user" />

    <ImageView
        android:id="@+id/banner_img_phone"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_phone_message"
        app:layout_constraintBottom_toBottomOf="@id/banner_send_message_txt_state"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/banner_send_message_txt_name_user" />
</androidx.constraintlayout.widget.ConstraintLayout>